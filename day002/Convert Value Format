using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace StringNumberConverion
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int a = 123;
            string b = a.ToString();    //값을 Tostring으로 문자열로 변환 
            Console.WriteLine(b);

            float c = 3.14f;    //f로 4바이트 변환
            string d = c.ToString();
            Console.WriteLine(d);

            string e = "123456";
            int f = Convert.ToInt32(e);     //int.Parse와 같음
            Console.WriteLine(f);

            string g = "1.2345";
            float h = float.Parse(g);       //문자를 값으로 변환
            Console.WriteLine(h);
        }
    }
}
