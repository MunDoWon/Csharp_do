SELECT * FROM EMP;
#ENAME과 JOB, SAL 를 출력하되 SAL 기준으로 오름차순정렬
SELECT ENAME, JOB,SAL FROM EMP
ORDER BY SAL DESC;

#부서조회
SELECT * FROM DEPT;
SELECT * FROM DEPARTMENTS;
#MGR 값 중 고유한 값만 출력하려면??? DISTINCT
SELECT DISTINCT MGR FROM EMP;
#월급 (SAL) 12를 곱해 '연봉'컬럼을 만들어 주세요
#EMP : ENAME,SAL,SAL *12 AS 연봉 
#NULL을 제거하는 일반함수 NVL('',0)
SELECT ENAME 이름, SAL 월급, SAL*12 AS 연봉 FROM EMP;
#부서 번호가 30번인 부서원의 모든 정보
SELECT * FROM EMP WHERE DEPTNO=30;
#사원번호가 7782인 사원의 정보를 출력해 주세요.
SELECT * FROM EMP WHERE EMPNO = 7782;
#부서번호가 30번이면서 직업이 'SALESMAN'인 직원들은?
SELECT * FROM EMP WHERE DEPTNO =30 AND JOB = 'SALESMAN';
#사원번호가7499,부서번호 30인 사원정보는 ?
SELECT * FROM EMP WHERE DEPTNO =30 AND EMPNO = 7499;
#부서번호 30,또는 직업이 'CLERK'인 사원정보는?
SELECT * FROM EMP WHERE DEPTNO =30 OR JOB = 'CLERK';
#급여(SAL)가 2000 이상인 사원정보는?
SELECT * FROM EMP WHERE SAL >= 2000;
#급여가 2500 이상이고 직업이 'ANALYST'DLS 사원정보는?
SELECT * FROM EMP WHERE SAL >= 2500 AND JOB = 'ANALYST';
#문자대소비교
SELECT * FROM EMP WHERE ENAME>= 'F';
#급여가 3000이아닌 어떻게 표현? != , <> , ^=
SELECT * FROM EMP WHERE SAL != 3000;
SELECT * FROM EMP WHERE SAL <> 3000;
SELECT * FROM EMP WHERE SAL ^= 3000;
SELECT * FROM EMP WHERE NOT SAL = 3000;

#IN연산자 포함
#직업이 'MANAGER' 또는 'SALESMAN' 또는 'CLERK'
SELECT * FROM EMP WHERE JOB IN ('MANAGER','SALESMAN','CLERK');
#전체부정
SELECT * FROM EMP WHERE JOB NOT IN ('MANAGER','SALESMAN','CLERK');
#등가 바교 OR을 이용해서 동일하게 만들려면
SELECT * FROM EMP WHERE JOB<>'MANAGER' AND JOB <> 'SALESMAN' AND JOB <> 'CLERK';
#BETWEEN A AND B
#급여가 2000이상 3000이하
SELECT * FROM EMP WHERE SAL BETWEEN 2000 AND 3000;
SELECT * FROM EMP WHERE SAL >= 2000 AND SAL<= 3000;
#문자열 포함
SELECT * FROM EMP WHERE ENAME LIKE 'S%';
#사원이름의 두번째 글자가 L인 사원만 출력하세요
SELECT * FROM EMP WHERE ENAME LIKE '_L%';
#사원이름에 AM문자가 포함되어있는 사원 데이터 출력
SELECT * FROM EMP WHERE ENAME LIKE '%AM%';
